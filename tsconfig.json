{
    "compilerOptions": {
        "types": ["node"],
        "lib": ["es2018", "ES6", "dom"],
        "baseUrl": ".",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "target": "ES6",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist/src",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": true,
        "sourceMap": false
    },
    "exclude": ["./node_modules/**/*", "./dist/**/*"],
    "include": ["./src/**/*"]
}
